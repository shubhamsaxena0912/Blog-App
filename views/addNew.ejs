<% include ./partials/header.ejs %>

<div class="container form-heading">
    <h1>Add new blog</h1>
</div>

<div class="container">
    <form method="post" action="/created">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" required>
        </div>
        <div class="form-group">
            <label for="image">Image link</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Image" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" placeholder="Description" id="description" name="description" rows="3" required></textarea>
        </div>

        <button type="submit" class="btn btn-success">Post</button>
    </form>
</div>

